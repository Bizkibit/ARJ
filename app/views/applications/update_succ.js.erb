$('#<%= j dom_id(@application)%> .btn.btn-success').remove()
$('#<%= j dom_id(@application)%> .btn.btn-danger').remove()

if ("<%= @application.rejected? %>" === "true") {
  $("#<%= j dom_id(@application)%>").prependTo($("#rejected_applications")).hide().fadeIn()
} else {
  $("#<%= j dom_id(@application)%>").prependTo($("#approved_applications")).hide().fadeIn()
}
